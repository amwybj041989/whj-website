wave($color)
  &::after
    content ""
    position absolute
    width 100%
    height 2px
    bottom -3px
    left 0
    background-color $color
    visibility hidden
    transform scaleX(0)
    transition .4s ease-in-out
  &:hover::after,
  &:active::after 
    visibility visible
    transform scaleX(1)